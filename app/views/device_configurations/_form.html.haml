-# frozen_string_literal: true
= simple_form_for(@device_configuration) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :location
    = f.input :module_type

  .form-actions
    = f.button :submit
