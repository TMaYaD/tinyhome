!!!
%html
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %meta{ content: 'NOODP', name: 'ROBOTS' }/
    %meta{ content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0, minimum-scale=1.0', name: 'viewport' }/

    %title= title
    %meta{ content: title, name: 'description' }/

    / Add to homescreen for Chrome on Android
    %meta{ content: 'yes', name: 'mobile-web-app-capable' }/
    %link{ href: 'images/android-desktop.png', rel: 'icon', sizes: '192x192' }/

    / Add to homescreen for Safari on iOS
    %meta{ content: 'yes', name: 'apple-mobile-web-app-capable' }/
    %meta{ content: 'black', name: 'apple-mobile-web-app-status-bar-style' }/
    %meta{ content: 'Material Design Lite', name: 'apple-mobile-web-app-title' }/
    %link{ href: 'images/ios-desktop.png', rel: 'apple-touch-icon-precomposed' }/

    / Tile icon for Win8 (144x144 + tile color)
    %meta{ content: 'images/touch/ms-touch-icon-144x144-precomposed.png', name: 'msapplication-TileImage' }/
    %meta{ content: '#3372DF', name: 'msapplication-TileColor' }/
    %link{ href: 'images/favicon.png', rel: 'shortcut icon' }/

    = csrf_meta_tags
    = csp_meta_tag

    %link{:href => "https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&display=swap", :rel => "stylesheet"}/
    = stylesheet_link_tag :application, media: 'all', 'data-turbolinks-track': 'reload'
    = yield :stylesheets

  = yield

  %foot
    = render 'javascript'
    = render 'css_overrides'

